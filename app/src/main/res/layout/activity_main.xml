
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#F9FFD1"

        android:weightSum="2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.bishwakhatri.nesteddrawer2.NewsActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.8"
    android:gravity="center"
    android:orientation="vertical">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView3"
            android:drawingCacheQuality="high"

            android:background="@drawable/noticeboard"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CosmoNoticeBoard v1"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"


        android:layout_gravity="center_horizontal" />


</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:gravity="center"
                android:layout_weight="1.6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="If you love this app please like us on:"
               android:layout_gravity="center"
                android:gravity="center"


                android:textColor="#000000"
                android:id="@+id/textView13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="0.4">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"




                android:src="@drawable/face"
                android:id="@+id/imageView4"
                android:layout_marginRight="31dp"
                android:layout_marginEnd="31dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView7"
                android:layout_toStartOf="@+id/imageView7" />





            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/playstore"
                android:id="@+id/imageView7"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
               </RelativeLayout>
        </LinearLayout>
            </LinearLayout>
    </LinearLayout>


